  <script>
    const userData = JSON.parse('{{{userData}}}');

    const usernames = Object.keys(userData);

    const totalCounts = usernames.map((username) => {
      const { Present, Halfday, Absent } = userData[username];
      const total = Present + Halfday + Absent;
      return { username, Present, Halfday, Absent, total };
    });

    const percentages = totalCounts.map(({ username, Present, Halfday, Absent, total }) => ({
      username,
      Present: (Present / total) * 100,
      Halfday: (Halfday / total) * 100,
      Absent: (Absent / total) * 100,
    }));

    percentages.sort((a, b) => b.total - a.total);

    const attendanceTypes = Object.keys(percentages[0]).filter((type) => type !== 'username');
    const datasets = attendanceTypes.map((type) => ({
      label: type,
      data: percentages.map((percentage) => percentage[type]),
      backgroundColor: getBackgroundColor(type),
      borderColor: getBorderColor(type),
      borderWidth: 1,
    }));

    const ctx = document.getElementById('attendanceChart').getContext('2d');
    const userAttendanceChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: percentages.map((percentage) => percentage.username),
        datasets: datasets,
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
            max: 100,
            ticks: {
              callback: (value) => `${value}%`,
            },
          },
        },
        plugins: {
          legend: {
            position: 'top',
          },
        },
      },
    });

    function getBackgroundColor(type) {
      switch (type) {
        case 'Present':
          return 'rgba(75, 192, 192, 0.2)';
        case 'Halfday':
          return 'rgba(255, 159, 64, 0.2)';
        case 'Absent':
          return 'rgba(255, 99, 132, 0.2)';
        default:
          return '';
      }
    }

    function getBorderColor(type) {
      switch (type) {
        case 'Present':
          return 'rgba(75, 192, 192, 1)';
        case 'Halfday':
          return 'rgba(255, 159, 64, 1)';
        case 'Absent':
          return 'rgba(255, 99, 132, 1)';
        default:
          return '';
      }
    }
